}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.btn').click(function(){
            $.ajax({
                typr:"post",
                url: "/Customer/LoginDeatails",
                //data:{name:$('#name').val()},
                data:$('#loginform').serialize(),
                success:function(result)
                {
                    if (result == false) {
                        $('#divResult').html("Invalid user");
                    } else {

                        //return window.location = '/Customer/LoginDeatails?'+result;
                        $('#divResult').html(result);
                    }
                }
            });
        });
    });
</script>


